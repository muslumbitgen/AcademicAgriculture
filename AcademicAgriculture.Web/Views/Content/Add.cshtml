@using System.Threading.Tasks
@model AcademicAgriculture.Entities.Concrete.Content
@{
    ViewData["Page"] = "İletişim Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="demo-form-wrapper">
    <form data-toggle="validator" asp-controller="Content" asp-action="Add" method="post">
        <div class="form form-horizontal">
            <div class="form-group">
                <label class="col-md-3 col-sm-4 col-xs-12 control-label" for="form-control-1">Telefon</label>
                <div class="col-md-5 col-sm-8 col-xs-12">
                    <input id="form-control-9"  class="form-control" asp-for="Phone" name="Phone" spellcheck="false" data-msg-required="Lütfen telefon giriniz!" required  type="text" data-inputmask="'alias': 'phone'">
                </div>
            </div>  
            <div class="form-group">
                <label class="col-md-3 col-sm-4 col-xs-12 control-label" for="form-control-1">E-mail</label>
                <div class="col-md-5 col-sm-8 col-xs-12">
                    <input id="form-control-9" class="form-control" asp-for="Email" name="Email" spellcheck="false" data-msg-required="Lütfen email giriniz!" required type="text" data-inputmask="'alias': 'email'">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-4 col-xs-12 control-label" for="form-control-1">Adres</label>
                <div class="col-md-5 col-sm-8 col-xs-12">
                    <textarea class="form-control" asp-for="Address" name="Address" spellcheck="false" data-msg-required="Lütfen adınızı giriniz!" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-4 col-xs-12 control-label" for="form-control-1">Durum</label>
                <div class="col-md-5 col-sm-8 col-xs-12">
                    <select asp-for="IsActive" class="form-control">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>

                    </select>
                </div>
            </div>
            <div class="col-md-6 col-md-offset-3 col-xs-3 width-auto  mt-15 mr-5 ">
                <input type="submit" id="save" value="Kaydet" class="btn btn-success" />
                <a asp-action="Index" asp-controller="Content" class="btn btn-danger">Vazgeç</a>
            </div>
        </div>
    </form>
</div>

