@model AcademicAgriculture.Web.Models.OurNumbers.OurNumberListViewModel
<div class="achivement1">
    <div class="container">
        <div class="row">
            @{
                var i = 0;
            }
            @foreach (var number in Model.OurNumbers)
            {
                if (i >= 6) i = 0;
                i++;
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="fh-counter  style-1">
                        <span class="fh-icon"><i class="flaticon-nature-@i"></i></span>
                        <div class="counter">
                            <div class="value">@number.Number</div>
                        </div>
                        <h4>@number.Title</h4>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
